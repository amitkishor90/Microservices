<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Custom Layout</title>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/site.css"> <!-- Ensure this is the correct path -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" />

</head>
<body>
    <!-- Header -->
    <header>
        <div class="navbar">
            <div class="logo">
                <a href="#">MyWebsite</a>
            </div>
            <nav>
                <ul class="menu">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">About</a></li>
                    <li class="dropdown">
                        <a href="#">Content Management &#9662;</a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="Coupon" asp-action="CouponIndex">Coupon</a></li>
                            <li><a class="dropdown-item" asp-controller="Product" asp-action="ProductIndex">Product</a></li>
                            <li><a href="#">Cloud Services</a></li>
                            <li><a href="#">Consulting</a></li>
                        </ul>
                    </li>
                    <li><a href="#">Contact</a></li>
                </ul>
                @if (!User.Identity.IsAuthenticated)
                {
                    <ul class="menu">
                        <li><a asp-controller="Auth" asp-action="Login">Login</a></li>
                        <li><a asp-controller="Auth" asp-action="Register">Register</a></li>
                    </ul>
                }
                else{
                    {
                        <li class="nav-item">
                            <a class="nav-link " href="#">Hello @User.Identity.Name</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Auth" asp-action="Logout">Logout</a>
                        </li>
                    }
                }
               
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <partial name="_Notifications" />
        </main>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <p>&copy; 2024 MyWebsite. All rights reserved.</p>
            <p>
                <a href="#">Privacy Policy</a> |
                <a href="#">Terms of Service</a> |
                <a href="#">Contact</a>
            </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
